{
    "compilerOptions": {
        "module": "nodenext",
        "target": "ESNext",
        "rootDir": "./",
        "outDir": "./dist",
        "types": ["jest", "node"],
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "isolatedModules": true
    },
    "include": ["test/**/*.ts", "src/**/*"],
    "exclude": ["node_modules"]
}
