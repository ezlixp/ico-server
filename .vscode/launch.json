{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Jest Test File",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": ["${relativeFile}", "--runInBand", "--watchAll=false"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}

